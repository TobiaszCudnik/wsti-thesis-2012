class e.Semaphore
	blocks: null
	val: null
							  
	constructor: (@val = 0) ->
		@blocks = []
														    
	wait: (block) ->
		@val--
		@blocks.push block
		if @val
			@blocks()
														    
	block: (next) ->
		console.log @
		@blocks.shift() next
														    
	signal: (next) ->
		@val++
		# async
		process.nextTick @block.bind @, next

